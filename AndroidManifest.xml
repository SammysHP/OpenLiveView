<?xml version="1.0" encoding="utf-8"?>
<!-- Version 1.0.1.9 of OpenLiveView -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.rnplus.olv"
    android:versionCode="13"
    android:versionName="@string/prefs_version_summary" android:installLocation="internalOnly">
    
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.BLUETOOTH" /> <!-- Needed for "Connection" -->
    <uses-permission android:name="android.permission.VIBRATE" /> <!-- Needed for "Find my phone" -->
    <uses-permission android:name="android.permission.READ_CONTACTS"/><!-- Needed for "SMS receiver" -->
	<uses-permission android:name="android.permission.RECEIVE_SMS"/><!-- Needed for "SMS receiver" -->
	<uses-permission android:name="android.permission.READ_SMS"/><!-- Needed for "SMS receiver" -->
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/><!-- Needed on some devices -->
	
	<uses-feature android:name="android.hardware.telephony" android:required="false" /><!-- Needed for "SMS receiver" but not required -->
	<uses-feature android:name="android.hardware.touchscreen" android:required="false" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:icon="@drawable/newlogo"
        android:label="@string/app_name" android:hardwareAccelerated="true" android:allowBackup="true">
        
        <activity
            android:name=".LiveViewPreferences"
            android:label="@string/preferences_name"
            android:icon="@drawable/ic_menu_manage"
            android:launchMode="singleInstance">
        </activity>
        
        <activity android:name=".LogViewActivity" />
        
		<activity android:name="nl.rnplus.olv.NotificationViewActivity" />
		
        <service android:name=".service.LiveViewService" />
        
        <service
            android:name="nl.rnplus.olv.service.GetNotificationService"
            android:description="@string/accessibility_service_description"
            android:enabled="@bool/need_bind_accessibility_service_permission"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
        		android:name="android.accessibilityservice"
       			android:resource="@xml/accessibilityservice" />
        </service>
        
        <service
            android:name="nl.rnplus.olv.service.OldGetNotificationService"
            android:description="@string/accessibility_service_description"
            android:enabled="@bool/not_need_bind_accessibility_service_permission"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
        </service>
       
        <receiver
            android:name="nl.rnplus.olv.service.BTReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.bluetooth.device.action.ACL_CONNECTED" />
                <action android:name="android.bluetooth.device.action.ACL_DISCONNECTED" />
                <action android:name="android.bluetooth.device.action.ACL_DISCONNECT_REQUESTED" />
            </intent-filter>
        </receiver>

        <provider
            android:name="nl.rnplus.olv.data.LiveViewDataProvider"
            android:authorities="nl.rnplus.olv"
            android:exported="false"/>
            
        <activity
            android:name="nl.rnplus.olv.MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
            
        <activity
            android:name="nl.rnplus.olv.ConfigWizardActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleInstance">
        </activity>
            
        <activity
            android:name="nl.rnplus.olv.PluginManagerActivity"
            android:label="@string/title_activity_plugin_manager"
            android:launchMode="singleInstance">
        </activity>  
        
        <activity
            android:name="nl.rnplus.olv.ExpertConfigActivity"
            android:label="@string/title_expert_settings_manager"
            android:launchMode="singleInstance">
        </activity>    
        
        <!-- TpmKranz -->
        <activity 
            android:name="nl.rnplus.olv.FilterEditor"
            android:label="@string/title_activity_filter_editor"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|keyboard">
        </activity> 
           
        <activity
            android:name="nl.rnplus.olv.AppDialog"
            android:label="@string/title_activity_app_dialog"
            android:theme="@style/DialogTheme"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|keyboard">
        </activity>
        
    </application>

</manifest>